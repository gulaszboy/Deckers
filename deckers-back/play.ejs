<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        
        
    </head>
    <body>
        <div style="width: 50%">
            <form action="/play/player1" method="POST">
                <h1>Player 1</h1>
                
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="username" />
                </div>
                <div class="form-group" >
                    <input type="submit" class="btn btn-primary" value="Join as p1" style="margin:auto; display:block;  margin-top: 4%" />
                </div>
                
            </form>
        </div>    
        
        <div style="width: 50%">
            <form action="/play/player2" method="POST">
                <h1>Player 2</h1>
                
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="username" />
                </div>
                <div class="form-group" >
                    <input type="submit" class="btn btn-primary" value="Join as p2" style="margin:auto; display:block;  margin-top: 4%" />
                </div>
                
            </form>
        </div>    
        
            
        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        
        <script>
            $( "#end-turn-btn" ).click(function() {
                $('.draggable').draggable( "disable" )
                $('.draggable').css('bottom', '-50'+'px');
            });
        
            $( ".play-zone" ).droppable({
                classes: {
                "ui-droppable-active": "bg-success",
                "ui-droppable-hover": "active"
                },
                drop: function( event, ui ) {
                        ui.draggable.remove();
                }
            })
        
            $( function() {
                $( ".draggable" ).draggable({ revert: "invalid" });
            } );
            
            $( document ).ready(
                function() {
                    $('.play-zone').css('height', (60*window.innerHeight)/100+'px');
                }
            )
            
            $(window).resize(function() {
                $('.play-zone').css('height', (60*window.innerHeight)/100+'px');
            });
        </script>
    </body>
</html>