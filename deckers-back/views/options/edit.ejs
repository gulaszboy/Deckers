<% include ../partials/header %>


    <div class="container">
      <div class="row" >
         <div class="jumbotron" style="margin:auto;margin-top:30px; width: 80%">
                <h1 style="text-align: center">Edit something</h1>
                <form action="/options/<%= option._id %>?_method=PUT" method="POST">
                    
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Name" name="new[name]" value="<%= option.name %>">
                        <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                    </div>
                    
                    <div class="form-group">
                        <label for="short">Short</label>
                        <input type="text" class="form-control" id="short" placeholder="Short" name="new[short]" value="<%= option.short %>">
                        <!--<small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>-->
                    </div>
                    
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description" rows="3" name="new[description]" placeholder="Description"><%= option.description %></textarea>
                    </div>
                    
                    <div class="form-group">
                        <label for="value">Value</label>
                        <input type="text" class="form-control" id="value" placeholder="Value" name="new[value]" value="<%= option.value %>">
                    </div>
                    
                    
                    
                 <button class="btn btn-lg btn-primary btn-block">Submit!</button>
               </form>
            </div>
         
      </div>
    </div>

<% include ../partials/footer %>
