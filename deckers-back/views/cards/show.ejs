<% include ../partials/header %>

    <div class="container ">
    <div class="row">
        <div class="col">
            <div class="jumbotron text-white bg-dark">
                <div>
                    <a><h4 style="display: inline"><%=card.name%></h4></a>
                    <p><%= card.description %></p>
                    <a class="btn btn-primary" href="/cards/">Back</a>
                    <a class="btn btn-warning" href="/cards/<%= card._id %>/edit">Edit</a>
                    <form action="/cards/<%= card._id %>?_method=DELETE" method="POST" style="display:inline">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <!--<th scope="col">Class</th>-->
                                <th scope="col">Stat</th>
                                <th scope="col">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row"> Class </th>
                                <td > <%= card.cardClass %></td>
                            </tr>
                            <tr>
                                <th scope="row"> Name </th>
                                <td > <%= card.name %></td>
                            </tr>
                            <tr>
                                <th scope="row"> Description </th>
                                <td > <%= card.description %></td>
                            </tr>
                        </tbody>
                    </table>
                    
                    <table class="table table-striped table-dark">
                        <thead>
                            <tr>
                                <!--<th scope="col">Class</th>-->
                                <th scope="col">Stat</th>
                                <th scope="col">Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <th scope="row"> Cost </th>
                                <td > <%= card.stats.cost %></td>
                            </tr>
                            <tr>
                                <th scope="row"> Amount </th>
                                <td > <%= card.stats.amount %></td>
                            </tr>
                            <tr>
                                <th scope="row"> Damage </th>
                                <td > <%= card.stats.damage %></td>
                            </tr>
                            <tr>
                                <th scope="row"> Armor </th>
                                <td > <%= card.stats.armor %></td>
                            </tr>
                            <tr>
                                <th scope="row"> Heal </th>
                                <td > <%= card.stats.heal %></td>
                            </tr>
                            
                            <% if(card.cardClass == Classes[0]){ %>
                                <tr>
                                    <th scope="row"> Armor To Damage </th>
                                    <td > <%= card.stats.armorToDamage %></td>
                                </tr>
                                <tr>
                                    <th scope="row"> Armor To Heal </th>
                                    <td > <%= card.stats.armorToHeal %></td>
                                </tr>
                            <% } %>
                           
                        </tbody>
                    </table>
                </div>
                
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
